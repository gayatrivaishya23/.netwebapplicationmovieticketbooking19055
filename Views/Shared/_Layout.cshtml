@{
    var appTitle = "🎬 Movie & Event Booking Portal";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @appTitle</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

    <!-- Custom Styles -->
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #0b0c10;
            color: #eaeaea;
            margin: 0;
        }

        /* 🔹 Navbar */
        nav.navbar {
            background: #141b29;
            box-shadow: 0 4px 10px rgba(0,0,0,0.5);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.3rem;
            color: #ffdd57 !important;
            letter-spacing: 1px;
        }

        .nav-link {
            color: #eaeaea !important;
            margin: 0 10px;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: #ffdd57 !important;
            }

        /* 🔹 Page container */
        .content {
            padding: 80px 0;
            min-height: 80vh;
        }

        /* 🔹 Footer */
        footer {
            background: #141b29;
            color: #aaa;
            padding: 20px 0;
            text-align: center;
            border-top: 1px solid #222;
        }

            footer span {
                color: #ffdd57;
            }

        /* 🔹 Hero section (Home header style) */
        .hero {
            background: linear-gradient(to right, #1e3c72, #2a5298);
            color: white;
            text-align: center;
            padding: 100px 20px;
            border-radius: 10px;
            margin-bottom: 40px;
        }

            .hero h1 {
                font-size: 3rem;
                font-weight: 700;
            }

            .hero p {
                font-size: 1.2rem;
            }

        /* 🔹 Buttons */
        .btn-custom {
            background: #ffdd57;
            color: #141b29;
            font-weight: 600;
            border: none;
            transition: 0.3s;
        }

            .btn-custom:hover {
                background: #e6c94f;
            }

        /* 🔹 Scrollable sections (Movies/Concerts/Events list) */
        .scroll-container {
            display: flex;
            overflow-x: auto;
            gap: 25px;
            scroll-behavior: smooth;
            padding: 20px 10px;
        }

            .scroll-container::-webkit-scrollbar {
                height: 10px;
            }

            .scroll-container::-webkit-scrollbar-thumb {
                background: #555;
                border-radius: 10px;
            }

        .card-custom {
            background: #1c1f26;
            border: none;
            min-width: 220px;
            flex: 0 0 auto;
            border-radius: 10px;
            transition: 0.4s;
        }

            .card-custom img {
                border-top-left-radius: 10px;
                border-top-right-radius: 10px;
                height: 320px;
                object-fit: cover;
            }

            .card-custom:hover {
                transform: scale(1.05);
                box-shadow: 0 6px 20px rgba(255, 221, 87, 0.3);
            }

        .card-body {
            text-align: center;
        }

        .card-title {
            color: #ffdd57;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .price {
            color: #bbb;
            font-size: 0.95rem;
        }

        .description {
            color: #ccc;
            font-size: 0.85rem;
            min-height: 50px;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">🎟️ MovieEventBooking</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/Home/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Movies/Index">Movies</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Concerts/Index">Concerts</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Events/Index">Events</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Register">Register</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container content">
        @RenderBody()
    </div>

   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
