@model IEnumerable<MovieEventBooking.Models.ConcertModel>

@{
    ViewData["Title"] = "Concerts";
}

<div class="container py-5" style="background: linear-gradient(135deg, #0b0c10, #1e3c72); min-height:100vh; color:white;">
    <div class="row">
        @foreach (var concert in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg" style="border-radius:20px; background-color:#141b29; color:white;">
                    <img src="@concert.PosterUrl" class="card-img-top" style="border-radius:20px 20px 0 0; height:200px; object-fit:cover;">
                    <div class="card-body">
                        <h4 class="fw-bold text-warning">@concert.Title</h4>
                        <p class="mb-1" style="color:white;">Genre: <span class="text-info">@concert.Genre</span></p>
                        <p class="mb-1" style="color:white;">Duration: <span class="text-info">@concert.Duration</span></p>
                        <p class="mb-1 fw-bold" style="color:white;">Price: ₹@concert.Price</p>
                        <p style="color:white;">Available Seats: <span class="text-success">@(@concert.TotalSeats - @concert.BookedSeats)</span></p>
                        <a href="@Url.Action("Details", "Concerts", new { id = concert.ConcertId })" class="btn btn-warning w-100 fw-bold mt-2" style="border-radius:10px;">Book Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
